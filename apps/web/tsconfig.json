{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lginxai/greenmd-core": ["../../packages/core/src"],
      "@lginxai/greenmd-ui": ["../../packages/ui/src"],
      "@lginxai/greenmd-types": ["../../packages/types/src"],
      "@lginxai/greenmd-shared": ["../../packages/shared/src"],
      "@lginxai/greenmd-core-legacy": ["../../packages/core-legacy/src"],
      "@/components/*": ["../../packages/ui/src/components/*"],
      "@/hooks/*": ["../../packages/ui/src/hooks/*"],
      "@/utils/*": ["../../packages/ui/src/utils/*"],
      "@/stores/*": ["../../packages/ui/src/stores/*"],
      "@/types/*": ["../../packages/ui/src/types/*"],
      "@/lib/*": ["../../packages/ui/src/lib/*"],
      "@/providers/*": ["../../packages/ui/src/providers/*"],
      "@/styles/*": ["../../packages/ui/src/styles/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

