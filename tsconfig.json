{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lginxai/greenmd-core": ["./packages/core/src"],
      "@lginxai/greenmd-ui": ["./packages/ui/src"],
      "@lginxai/greenmd-editor": ["./packages/editor/src"],
      "@lginxai/greenmd-extensions": ["./packages/extensions/src"],
      "@lginxai/greenmd-themes": ["./packages/themes/src"],
      "@lginxai/greenmd-types": ["./packages/types/src"],
      "@lginxai/greenmd-shared": ["./packages/shared/src"],
      "@lginxai/greenmd-core-legacy": ["./packages/core-legacy/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}

